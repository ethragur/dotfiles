bar {
	i3bar_command i3bar -t
	status_command i3blocks -c $dotdir/i3/i3blocks.conf
	position top
	tray_output primary
	tray_padding 5
	font pango:Fira Code, Icons 13
	colors {
		separator $base03
		background $base00
		statusline $base05
		focused_workspace  $base0E #00000000 $base06
		active_workspace $base08 #0000000 $base05
		inactive_workspace #00000000 #00000000 $base04
		urgent_workspace $base01 $base01 $base00
	}
}

client.focused $base02 $base02 $base00 $base01
client.focused_inactive $base0D $base0D $base0D $base0D
client.unfocused $base0F $base07 $base03 $base01
client.urgent $base02 $base08 $base07 $base08
