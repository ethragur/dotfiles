#set mod keys
set $mod Mod4 
set $alt Mod1

set $dotdir $HOME/dotfiles
set $DISPLAY-0 DisplayPort-0
set $DISPLAY-1 HDMI-A-0


exec_always bash $dotdir/scripts/display.sh
exec_always --no-startup-id feh --bg-tile "$(< "${HOME}/.cache/wal/wal")" 
exec_always --no-startup-id picom --experimental-backends --config $dotdir/compton/compton.conf

#Set Keyboard
exec_always --no-startup-id setxkbmap us -variant altgr-intl
exec_always --no-startup-id xmodmap -e 'clear Lock' -e 'keycode 0x42 = Escape'

exec_always --no-startup-id fcitx -d
exec_always --no-startup-id touchegg 

#for PulseAudio
bindsym XF86AudioRaiseVolume exec --no-startup-id ponymix increase 5 && pkill -RTMIN+17 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id ponymix decrease 5 && pkill -RTMIN+17 i3blocks
bindsym XF86AudioMute exec --no-startup-id ponymix toggle && pkill -RTMIN+17 i3blocks

#Lock
bindsym $mod+$alt+l exec sh $dotdir/scripts/i3lock.sh

#File Browser
bindsym $mod+b exec --no-startup-id exec kitty -e ranger 

#Reconf Displays
#bindsym $mod+$alt+d exec sh $dotdir/scripts/configure_xrandr.sh 

#Rotate Screen 
bindsym $mod+$alt+r exec $dotdir/scripts/tablet-mode.sh -j

#BrightnessControl done via acpi now
bindsym XF86MonBrightnessUp exec --no-startup-id $dotdir/scripts/i3blocks/backlight.sh -i
bindsym XF86MonBrightnessDown exec --no-startup-id $dotdir/scripts/i3blocks/backlight.sh -d 

new_window pixel 1
new_float pixel 1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Fira Code 8

#open current clipboard link in mpv (for example youtube)
#bindsym $mod+p exec mpv $(xclip -o)

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

#start browser
bindsym $mod+c exec env MOZ_USE_XINPUT2=1 GTK_IM_MODULE=xim firefox
bindsym $mod+$alt+c exec env MOZ_USE_XINPUT2=1 GTK_IM_MODULE=xim firefox

#take screenshot
##whole screen
bindsym $mod+p exec scrot '%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/Documents/Pictures/Screenshots/ && mv $f ~/Documents/Pictures/Screenshots/'
##focused window
bindsym $mod+Shift+p exec scrot -u '%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/Documents/Pictures/Screenshots/ && mv $f ~/Documents/Pictures/Screenshots/'

bindsym $mod+Shift+m exec scrot -u '%Y%m%d_%H%M%S.png' -e 'mv $f /tmp/ && cat /tmp/$f | xsel -b'
##select area
bindsym $mod+s exec scrot -s '%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/Documents/Pictures/Screenshots/ && mv $f ~/Documents/Pictures/Screenshots/'

# start a terminal
bindsym $mod+Return exec kitty


# kill focused window
bindsym $mod+Shift+q kill

#gaps settings
gaps inner 10
gaps outer 5
#no gaps when there is only one window on the screen
smart_gaps on
smart_borders on

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+Shift+v split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
#bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# make window sticky
bindsym $mod+Shift+s sticky toggle

