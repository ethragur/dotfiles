# start dmenu2
bindsym $mod+d exec --no-startup-id j4-dmenu-desktop --dmenu="dmenu -i -y 20 -o 0.8 -l 100 -w 300 -p '>' -nf '$base03' -nb '$base00' -sb '$base0D' -sf '$base00' -fn 'Hack-13'" --term="i3-sensible-terminal"


bar {
	status_command ~/tmp/i3blocks/./i3blocks -c $dotdir/i3/i3blocks.conf
	i3bar_command i3bar -t
	mode dock
	strip_workspace_numbers yes
	position top 
	font pango:Hack, Icons 10
	colors {
		separator $base03
		background $basetransperant
		statusline $base05
		focused_workspace $base0C $base0E $base00
		active_workspace $base0F $base02 $base07
		inactive_workspace $base07 $base0F $base07
		urgent_workspace $base08 $base08 $base07
	}
}

client.focused $base02 $base02 $base00 $base01
client.focused_inactive $base0D $base0D $base03 $base01
client.unfocused $base0F $base07 $base03 $base01
client.urgent $base02 $base08 $base07 $base08
